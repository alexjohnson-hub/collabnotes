
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Users can only read and write to their own user document.
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    match /notes/{noteId} {
      // READ (Single Doc): A user can read a note if they are the owner or a collaborator.
      allow read: if request.auth != null && 
                   (resource.data.ownerId == request.auth.uid || request.auth.uid in resource.data.collaboratorIds);

      // CREATE: A user can create a note if they are authenticated and set themselves as the owner.
      allow create: if request.auth != null && request.resource.data.ownerId == request.auth.uid;

      // UPDATE: A user can update a note if they are the owner or a collaborator.
      // Collaborators cannot change ownership or the collaborator list.
      allow update: if request.auth != null && 
                     ( (resource.data.ownerId == request.auth.uid) || 
                       (request.auth.uid in resource.data.collaboratorIds && 
                        request.resource.data.ownerId == resource.data.ownerId && 
                        request.resource.data.collaboratorIds == resource.data.collaboratorIds) );

      // DELETE: Only the owner can delete a note.
      allow delete: if request.auth != null && resource.data.ownerId == request.auth.uid;
    }

    // LIST (Query): Rules for querying the 'notes' collection.
    // These must be on a collection path, not a specific document path.
    match /notes/{document=**} {
        // Allow users to list notes where they are the owner.
        allow list: if request.auth != null && request.query.resource.data.ownerId == request.auth.uid;
        // Allow users to list notes where they are a collaborator.
        allow list: if request.auth != null && request.auth.uid in request.query.resource.data.collaboratorIds;
    }
  }
}
