
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Rules for the 'users' collection
    match /users/{userId} {
      // Allow authenticated users to read any user profile (for collaborator avatars/names)
      allow get: if request.auth != null;
      // Allow a user to create, read and write to their own profile document
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Rules for the 'notes' collection
    match /notes/{noteId} {
      // READ (Single Doc): A user can read a note if they are the owner or a collaborator.
      allow get: if request.auth != null && (resource.data.ownerId == request.auth.uid || request.auth.uid in resource.data.collaboratorIds);

      // CREATE: A user can create a note if they are authenticated and set themselves as the owner.
      allow create: if request.auth != null && request.resource.data.ownerId == request.auth.uid;

      // UPDATE: The owner can update anything. Collaborators can update the note but not change ownership or the collaborator list.
      allow update: if request.auth != null && 
                     ( (resource.data.ownerId == request.auth.uid) || 
                       (request.auth.uid in resource.data.collaboratorIds && 
                        request.resource.data.ownerId == resource.data.ownerId && 
                        request.resource.data.collaboratorIds == resource.data.collaboratorIds) );

      // DELETE: Only the owner can delete a note.
      allow delete: if request.auth != null && resource.data.ownerId == request.auth.uid;

      // LIST (Query): These rules must be separate and match the client-side queries.
      // This rule allows the query for notes owned by the user.
      allow list: if request.auth != null && request.query.where.ownerId == request.auth.uid;
      // This rule allows the query for notes where the user is a collaborator.
      allow list: if request.auth != null && request.auth.uid in request.query.where.collaboratorIds;
    }
  }
}
