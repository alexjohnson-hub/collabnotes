
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Rules for individual user documents
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Rules for the 'notes' collection
    match /notes/{noteId} {
      // This rule secures both direct reads (get) and queries (list).
      // For a 'list' operation (query), Firestore checks if this condition can be proven true
      // for all documents that *might* be returned. The app's query `where("editors", "array-contains", user.uid)`
      // ensures that every document in the result set will satisfy this rule.
      // This also allows reading a single note if it's public.
      allow read: if (request.auth.uid in resource.data.editors) || (resource.data.isPublic == true);

      // Allow creating a note if the user is in the new note's editors list.
      allow create: if request.auth != null && request.auth.uid in request.resource.data.editors;

      // Allow updating a note if the user is already an editor,
      // OR if the note is public and the logged-in user is adding themselves as an editor.
      allow update: if request.auth != null && (
        (request.auth.uid in resource.data.editors) ||
        (resource.data.isPublic == true && request.auth.uid in request.resource.data.editors && !(request.auth.uid in resource.data.editors))
      );

      // Allow deleting a note only if the user is an editor.
      allow delete: if request.auth != null && request.auth.uid in resource.data.editors;
    }
  }
}
