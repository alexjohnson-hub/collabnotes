
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Users can only read and write to their own user document.
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    match /notes/{noteId} {
      // READ: A user can read a note if they are authenticated and are either the owner
      // or their UID is in the collaboratorIds list.
      allow read: if request.auth != null && 
                   (resource.data.ownerId == request.auth.uid || request.auth.uid in resource.data.collaboratorIds);

      // CREATE: A user can create a note if they are authenticated and they set themselves as the owner.
      allow create: if request.auth != null && request.resource.data.ownerId == request.auth.uid;

      // UPDATE: A user can update a note if they are the owner.
      // Collaborators can also update, but cannot change ownership or the collaborator list.
      allow update: if request.auth != null && 
                     ( (resource.data.ownerId == request.auth.uid) || 
                       (request.auth.uid in resource.data.collaboratorIds && 
                        request.resource.data.ownerId == resource.data.ownerId && 
                        request.resource.data.collaboratorIds == resource.data.collaboratorIds) );

      // DELETE: Only the owner can delete a note.
      allow delete: if request.auth != null && resource.data.ownerId == request.auth.uid;
    }

    // LIST rules for queries
    // We need to match on the collection, not the document
    match /notes/{document=**} {
        // Allow users to list notes they own
        allow list: if request.auth != null && request.query.resource.data.ownerId == request.auth.uid;
        // Allow users to list notes they are a collaborator on
        allow list: if request.auth != null && request.auth.uid in request.query.resource.data.collaboratorIds;
    }
  }
}
