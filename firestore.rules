
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    match /notes/{noteId} {
      // Allow a user to query for notes they own.
      allow list: if request.auth != null && request.auth.uid == request.query.filters.ownerId;
      
      // Allow get, update, or delete a note if they are the owner.
      allow get, update, delete: if request.auth != null && resource.data.ownerId == request.auth.uid;

      // An authenticated user can create a note if they are the owner.
      allow create: if request.auth != null && request.resource.data.ownerId == request.auth.uid;
    }
  }
}
