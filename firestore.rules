
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Rules for the 'users' collection
    match /users/{userId} {
      // Allow any authenticated user to read any user profile.
      // This is needed to display collaborator avatars and names.
      allow get: if request.auth != null;

      // Allow a user to create or update their own profile document.
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Rules for the 'notes' collection
    match /notes/{noteId} {
      // A user can get a note if their UID is in the accessControl list.
      allow get: if request.auth != null && request.auth.uid in resource.data.accessControl;

      // A user can list notes if their UID is in the 'accessControl' array.
      // This rule supports the `where('accessControl', 'array-contains', auth.uid)` query.
      allow list: if request.auth != null && request.auth.uid in request.query.filters.accessControl;

      // An authenticated user can create a note if they are the owner and they are in the accessControl list.
      allow create: if request.auth != null 
                    && request.resource.data.ownerId == request.auth.uid
                    && request.auth.uid in request.resource.data.accessControl;

      // The owner can update anything. A collaborator can update if they don't change ownership or collaborators.
      allow update: if request.auth != null && request.auth.uid in resource.data.accessControl
                    && ( (resource.data.ownerId == request.auth.uid) || 
                         (request.resource.data.ownerId == resource.data.ownerId && 
                          request.resource.data.collaboratorIds == resource.data.collaboratorIds) );

      // Only the owner of a note can delete it.
      allow delete: if request.auth != null && resource.data.ownerId == request.auth.uid;
    }
  }
}
